<Page x:Class="Hotel.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hotel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2">

    <Grid>
        <TabControl>
            <TabItem Header="Статистика">
                <StackPanel Margin="10">
                    <TextBlock Text="Процент загрузки номерного фонда: 85%" FontSize="14" Margin="5"/>
                    <TextBlock Text="ADR (Средняя стоимость номера): 5000 руб" FontSize="14" Margin="5"/>
                    <TextBlock Text="RevPAR (Средний доход на комнату): 4250 руб" FontSize="14" Margin="5"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Управление персоналом">
                <Button Content="Распределить задачи" Width="200" Margin="10" />
            </TabItem>
        </TabControl>
    </Grid>
</Page>
