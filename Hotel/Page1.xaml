<Page x:Class="Hotel.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hotel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        <TabControl>

            <TabItem Header="Бронирование номеров">
                <Grid>
                    <StackPanel Margin="10">
                        <Button Content="Добавить бронирование" Width="200" Margin="5" />
                        <Button Content="Заселить гостя" Width="200" Margin="5" />
                        <Button Content="Оформить выезд" Width="200" Margin="5" />
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Статус номеров">
                <Grid>
                    <DataGrid x:Name="RoomsGrid" AutoGenerateColumns="True" Margin="10" />
                </Grid>
            </TabItem>

            <TabItem Header="Уборка номеров">
                <Grid>
                    <Button Content="Создать график уборки" Width="200" Margin="10" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
