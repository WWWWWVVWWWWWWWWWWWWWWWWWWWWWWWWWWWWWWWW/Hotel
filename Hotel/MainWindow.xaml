<Window x:Class="Hotel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Система управления гостиницей" 
                   FontSize="20" HorizontalAlignment="Center" Margin="0,20,0,0"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Модуль администратора" Name="Admin" Width="200" Height="50" 
                    Margin="10" Click="Admin_Click"/>
            <Button Content="Модуль руководителя" Name="Manager" Width="200" Height="50" 
                    Margin="10" Click="Manager_Click"/>
            <Button Content="Выход" Name="Exit"  Width="200" Height="50" 
                    Margin="10" Click="Exit_Click"/>
        </StackPanel>
        <Frame Name="FrmMain" NavigationUIVisibility="Hidden"  />
    </Grid>
</Window>
